---
import "@/styles/global.css";
import "katex/dist/katex.min.css";
import { SITE_CONFIG } from "@/config";

interface Props {
  pageTitle: string;
  description?: string;
  image?: string;
}

const {
  pageTitle,
  description = SITE_CONFIG.description,
  image = "/og-image.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, `https://${SITE_CONFIG.website}`);
const fullTitle = pageTitle === SITE_CONFIG.title
  ? pageTitle
  : `${pageTitle} | ${SITE_CONFIG.title}`;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="canonical" href={canonicalURL} />

  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/site.webmanifest" />

  <!-- Primary Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  <meta name="author" content={SITE_CONFIG.author} />
  <meta name="generator" content={Astro.generator} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, `https://${SITE_CONFIG.website}`)} />
  <meta property="og:site_name" content={SITE_CONFIG.title} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={fullTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, `https://${SITE_CONFIG.website}`)} />
</head>
