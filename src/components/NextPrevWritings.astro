---
import type { WritingNeighbors } from "@/types";

interface Props {
  neighbors: WritingNeighbors;
}

const { neighbors } = Astro.props;
---

<div class="neighbor-writing-container">
  <div class="neighbor-writing neighbor-writing-left">
    {
      neighbors.previous && (
        <a href={`/writings/${neighbors.previous?.url}`}>
          <div class="neighbor-writing-left">
            <img
              src="/icons/larrow.svg"
              alt="Previous post"
              class="nav-icon"
            />
            <span>{neighbors.previous?.title}</span>
          </div>
        </a>
      )
    }
  </div>
  <div class="neighbor-writing neighbor-writing-right">
    {
      neighbors.next && (
        <a href={`/writings/${neighbors.next?.url}`}>
          <div class="neighbor-writing-right">
            <span>{neighbors.next?.title}</span>
            <img
              src="/icons/rarrow.svg"
              alt="Next post"
              class="nav-icon"
            />
          </div>
        </a>
      )
    }
  </div>
</div>
