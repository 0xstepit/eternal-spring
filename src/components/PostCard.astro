---
import { toPostDate } from "../scripts/dates";

// Component Script (JavaScript)
interface Props {
  url: string;
  title: string;
  date: Date;
  tags: Array<string>;
}

const { url, title, date, tags } = Astro.props;

const formatterDate = toPostDate(date);
---

<!-- Component Template (HTML + JS Expressions) -->
<article class="post-card">
  <a href={url} class="post-card-link">
    <time class="post-date">{formatterDate}</time>
    <h3 class="post-title">{title}</h3>
    <div class="post-tags">
      {tags.map((tag: string) => <span class="tag">{tag}</span>)}
    </div>
  </a>
</article>

<style>
  /* Main card container */
  .post-card {
    list-style: none;
  }

  /* Makes the entire card clickable */
  .post-card-link {
    display: block;
    padding: 1.5rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    background: #fff;
    transition: all 0.2s ease;
  }

  /* Hover effect: subtle lift and border color change */
  .post-card-link:hover {
    border-color: #ff9776;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  /* Date: small, gray, uppercase */
  .post-date {
    display: block;
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  /* Title: large, bold, your brand color */
  .post-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0d0950;
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  /* Title changes color on hover */
  .post-card-link:hover .post-title {
    color: #ff9776;
  }

  /* Tags container: flex layout */
  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  /* Individual tag: pill-shaped */
  .tag {
    padding: 0.25rem 0.75rem;
    background: #f5f5f5;
    color: #0d0950;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Dark mode support */
  :global(html.dark) .post-card-link {
    background: #1a1a40;
    border-color: #2d2d60;
  }

  :global(html.dark) .post-title {
    color: #fff;
  }

  :global(html.dark) .post-date {
    color: #aaa;
  }

  :global(html.dark) .tag {
    background: #2d2d60;
    color: #fff;
  }

  :global(html.dark) .post-card-link:hover {
    border-color: #ff9776;
  }
</style>
