---
import { toPostDate } from "../scripts/dates";

interface Props {
  url: string;
  title: string;
  summary: string;
  date: Date;
  tags: Array<string>;
}

const { url, title, summary, date, tags } = Astro.props;

const formatterDate = toPostDate(date);
---

<article class="post-card">
  <header class="post-header">
    <time class="post-date">{formatterDate}</time>
    <a href={url} class="post-link">{title}</a>
  </header>

  {
    tags.length > 0 && (
      <ul class="post-tags">
        {tags.map((tag: string) => (
          <li class="post-tag tag-container">
            <span class="tag-text">{tag}</span>
          </li>
        ))}
      </ul>
    )
  }

  <p class="post-summary">{summary}</p>
</article>
