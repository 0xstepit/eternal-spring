---
import { Image } from "astro:assets";
import IndexImage from "../images/lisbon.jpg";

import { SITE_CONFIG } from "@/config";
import Base from "../layouts/Base.astro";

const pageTitle = SITE_CONFIG.title;
---

<Base pageTitle={pageTitle} pageStyle="clean">
  <h1>Welcome to Eternal Spring.</h1>

  <div class="decorator">
    <span>×</span>
    <span>×</span>
    <span>×</span>
  </div>

  <p>Random notes of a curious engineer.</p>

  <figure class="figure">
    <div class="figure-container">
      <Image
        class="index-image"
        src={IndexImage}
        alt="Santa Maria Maior in Lisbon"
        format="webp"
        quality={80}
      />
      <figcaption class="figure-caption">
        <p>Figure 0: Santa Maria Maior (Lisbon, Portugal).</p>
      </figcaption>
    </div>
  </figure>
</Base>
